<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card border-0 shadow">
        <div class="card-header bg-primary text-white py-3">
          <h2 class="h4 text-center mb-0">Create Account</h2>
        </div>
        
        <div class="card-body p-4 p-md-5">
         <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.hidden_field :role, value: params[:role] %>
            
            <div class="row g-3">
              <!-- First Name -->
              <div class="col-md-6">
                <div class="form-floating mb-3">
                  <%= f.text_field :first_name, class: "form-control", placeholder: " ", required: true %>
                  <%= f.label :first_name, class: "form-label" %>
                </div>
              </div>
              
              <!-- Last Name -->
              <div class="col-md-6">
                <div class="form-floating mb-3">
                  <%= f.text_field :last_name, class: "form-control", placeholder: " ", required: true %>
                  <%= f.label :last_name, class: "form-label" %>
                </div>
              </div>
              
              <!-- Country -->
              <div class="col-12">
                <div class="form-floating mb-3">
                  <%= f.select :country, ['United States', 'India', 'Canada', 'UK', 'Australia'], { prompt: "Select country" }, class: "form-select", required: true %>
                  <%= f.label :country, class: "form-label" %>
                </div>
              </div>
              
              <!-- Email -->
              <div class="col-12">
                <div class="form-floating mb-3">
                  <%= f.email_field :email, class: "form-control", placeholder: " ", required: true %>
                  <%= f.label :email, class: "form-label" %>
                </div>
              </div>
              
              <!-- Password -->
              <div class="col-12">
                <div class="form-floating mb-3">
                  <%= f.password_field :password, class: "form-control", placeholder: " ", required: true %>
                  <%= f.label :password, class: "form-label" %>
                </div>
              </div>
              
              <!-- Password Confirmation -->
              <div class="col-12">
                <div class="form-floating mb-4">
                  <%= f.password_field :password_confirmation, class: "form-control", placeholder: " ", required: true %>
                  <%= f.label :password_confirmation, class: "form-label" %>
                </div>
              </div>
              
              <!-- Submit Button -->
              <div class="col-12">
                <%= f.submit "Register", class: "btn btn-primary btn-lg w-100 py-3" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>