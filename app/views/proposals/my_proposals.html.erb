<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <h2 class="text-center mb-4">My Proposals</h2>
      
      <div class="card shadow-sm">
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-hover mb-0">
              <thead class="table-light">
                <tr>
                  <th class="ps-4">Job Title</th>
                  <th>Offer Amount</th>
                  <th>Status</th>
                  <th class="text-end pe-4">Submitted At</th>
                </tr>
              </thead>
              <tbody>
                <% @proposals.each do |proposal| %>
                  <tr class="<%= status_row_class(proposal.status) %>">
                    <td class="ps-4 fw-bold"><%= proposal.job.title %></td>
                    <td><span class="badge bg-primary rounded-pill"><%= number_to_currency(proposal.offer_amount) %></span></td>
                    <td>
                      <span class="badge <%= status_badge_class(proposal.status) %>">
                        <%= proposal.status.capitalize %>
                      </span>
                    </td>
                    <td class="text-end pe-4"><%= proposal.created_at.strftime("%d %b %Y") %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      
      <% if @proposals.empty? %>
        <div class="alert alert-info mt-4 text-center">
          You haven't submitted any proposals yet.
        </div>
      <% end %>
    </div>
  </div>
</div>